<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".iniciar">

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="596dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="fitCenter"
                    android:onClick="tester"
                    android:src="@android:drawable/btn_star"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/tester" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/res"
                    android:scaleType="fitCenter"
                    android:onClick="res"/>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/diodos"
                    android:scaleType="fitCenter"
                    android:onClick="dio"/>

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="200dp"
                    android:layout_height="177dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/cables"
                    android:onClick="cables"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="195dp"
                    android:layout_height="167dp"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/transistor"
                    android:scaleType="fitCenter"
                    android:onClick="tran"/>

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="184dp"
                    android:layout_height="173dp"
                    android:onClick="sen"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/sensores" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="188dp"
                    android:layout_height="173dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/led"
                    android:onClick="led"/>

                <ImageButton
                    android:id="@+id/imageButton21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star"
                    tools:srcCompat="@mipmap/cap"
                    android:onClick="capa"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="420dp"
        android:layout_height="143dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button10"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:onClick="cerrar"
        android:text="Cerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/button9"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:backgroundTint="#FBFBFB"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="Buscar"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#F6F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <ImageButton
        android:id="@+id/imageButton16"
        android:layout_width="55dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:srcCompat="@drawable/baseline_search_24" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="135dp"
        android:layout_height="50dp"

        android:entries="@array/opciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


</androidx.constraintlayout.widget.ConstraintLayout>